{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/output/AuditResult.json",
  "title": "AuditResult",
  "type": "object",
  "properties": {
    "audited_files": { "type": "integer", "minimum": 0 },
    "audited_contracts": { "type": "integer", "minimum": 0 },
    "vulnerability_count": {
      "type": "object",
      "properties": {
        "high": { "type": "integer", "minimum": 0 },
        "medium": { "type": "integer", "minimum": 0 },
        "low": { "type": "integer", "minimum": 0 },
        "informational": { "type": "integer", "minimum": 0 },
        "optimization": { "type": "integer", "minimum": 0 }
      },
      "required": ["high", "medium", "low", "informational", "optimization"],
      "additionalProperties": false
    },
    "total_lines": { "type": "integer", "minimum": 0 },
    "security_score": { "type": "number", "minimum": 0, "maximum": 100 }
  },
  "required": [
    "audited_files",
    "audited_contracts",
    "vulnerability_count",
    "total_lines",
    "security_score"
  ],
  "additionalProperties": true
}

