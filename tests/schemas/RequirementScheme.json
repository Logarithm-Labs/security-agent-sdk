{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/input/RequirementScheme.json",
  "title": "RequirementScheme",
  "type": "object",
  "properties": {
    "contracts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "address": { "type": "string" },
          "chain_id": { "type": "integer" }
        },
        "required": ["address", "chain_id"],
        "additionalProperties": false
      }
    },
    "github_repo_url": { "type": "string", "format": "uri" }
  },
  "required": ["contracts", "github_repo_url"],
  "additionalProperties": false
}

